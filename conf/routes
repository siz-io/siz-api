# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                  controllers.Application.index
POST    /users                             controllers.Users.createDispatcher
GET     /users/:id                         controllers.Users.get(id)
POST    /tokens                            controllers.Tokens.dispatcher
PUT     /tokens/:id                        controllers.Tokens.updateDispatcher(id)
GET     /emails/:email                     controllers.Users.checkEmail(email)
GET     /stories                           controllers.Stories.dispatcher(limit: Int ?= 20, orderBy: String ?= "date", slug: Option[String])
GET     /stories/$id<[0-9a-z]{24}>         controllers.Stories.getById(id)
